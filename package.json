{
  "name": "TechTrek",
  "version": "0.1.0",
  "homepage": "https://github.com/Ssttar/TechTrek",
  "bugs": {
    "url": "https://github.com/Ssttar/TechTrek/issues/new/choose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ssttar/TechTrek.git"
  },
  "license": "MIT",
  "author": "Star <i@ssstttar.com>",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.gitignore --write "
    ],
    "*.{js,ts,cjs,mjs,jsx,tsx,json}": [
      "biome lint --apply --no-errors-on-unmatched"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "scripts": {
    "prepare": "bun run simple-git-hooks",
    "start": "bun run dev",
    "prebuild": "rimraf .next || exit 0",
    "dev": "cross-env NODE_ENV=development next dev -p 2323",
    "dev:turbo": "cross-env NODE_ENV=development next dev -p 2323 --turbo",
    "analyze": "cross-env NODE_ENV=production ANALYZE=true BUNDLE_ANALYZE=browser next build",
    "build": "cross-env NODE_ENV=production NODE_OPTIONS=--max_old_space_size=4096 next build",
    "build:ci": "cross-env NODE_ENV=production NODE_OPTIONS=--max_old_space_size=4096 NEXT_TELEMETRY_DISABLED=1 CI=true next build",
    "lint": "biome lint --apply src/**/*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json} --no-errors-on-unmatched"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.4",
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@innei/prettier": "^0.13.2",
    "@lobehub/lint": "^1.23.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/npm": "^12.0.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "biome": "^0.3.3",
    "daisyui": "^4.12.2",
    "lint-staged": "^15.2.7",
    "postcss": "^8",
    "prettier": "^3.3.2",
    "semantic-release": "^24.0.0",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.1",
    "typescript": "5.4.5"
  }
}
