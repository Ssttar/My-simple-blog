{
  "name": "TechTrek",
  "version": "0.0.1-alpha.0",
  "private": false,
  "packageManager": "pnpm@9.11.0",
  "description": "My Simple Personal website",
  "author": "Zach <i@ssstttar.com>",
  "license": "MIT",
  "homepage": "https://github.com/Zach677/TechTrek",
  "repository": {
    "type": "git",
    "url": "https://github.com/Zach677/TechTrek.git"
  },
  "scripts": {
    "build": "NODE_ENV=production NODE_OPTIONS=--max_old_space_size=4096 next build",
    "build:ci": "NODE_ENV=production NODE_OPTIONS=--max_old_space_size=4096 NEXT_TELEMETRY_DISABLED=1 CI=true next build",
    "bump": "vv",
    "dev": "next dev -p 3500",
    "lint": "eslint --fix",
    "prebuild": "rimraf .next || exit 0",
    "prepare": "pnpm exec simple-git-hooks",
    "start": "npm run dev",
    "test": "vitest run --config vitest.config.ts"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "clsx": "^2.1.1",
    "commitlint-config-gitmoji": "^2.3.1",
    "next": "14.2.13",
    "postcss-import": "^16.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@floating-ui/react-dom": "^2.1.2",
    "@iconify-json/material-symbols": "^1.2.1",
    "@iconify-json/mingcute": "^1.2.0",
    "@iconify/tailwind": "^1.1.3",
    "@innei/prettier": "^0.15.0",
    "@peculiar/webcrypto": "^1.5.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^20.16.10",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "bypass-vue-devtools": "^0.0.6",
    "daisyui": "^4.12.10",
    "dayjs": "^1.11.13",
    "eslint": "^9.11.1",
    "eslint-config-hyoban": "^3.1.8",
    "framer-motion": "11.3.2",
    "happy-dom": "^15.7.4",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "nbump": "^2.0.4",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.11.1",
    "tailwindcss": "^3.4.13",
    "tailwindcss-animated": "^1.1.2",
    "typescript": "5.6.2",
    "vitest": "^2.1.1",
    "vitest-canvas-mock": "^0.3.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.gitignore --write "
    ],
    "*.{js,ts,cjs,mjs,jsx,tsx,json}": [
      "eslint --fix"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase"
    ],
    "after": [
      "gh pr create --title 'chore: Release v${NEW_VERSION}' --body 'v${NEW_VERSION}' --base main --head dev"
    ],
    "commit_message": "chore(release): release v${NEW_VERSION}",
    "tag": false,
    "changelog": true,
    "allowed_branches": [
      "dev"
    ]
  }
}